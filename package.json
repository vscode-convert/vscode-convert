{
	"name": "vscode-convert",
	"displayName": "VSCode Convert",
	"description": "Converts selected text into various forms, e.g UPPERCASE, lowercase, camelCase, etc.",
	"version": "0.0.3",
	"publisher": "vikash-ck-dev",
	"repository": {
		"url": "https://github.com/vscode-convert/vscode-convert",
		"type": "public"
	},
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"string",
		"convert",
		"transform",
		"naming convention",
		"camelcase snakecase"
	],
	"icon": "icon.png",
	"galleryBanner": {
		"color": "#501EB5",
		"theme": "dark"
	},
	"activationEvents": [
		"onCommand:vscode-convert.uppercase",
		"onCommand:vscode-convert.lowercase"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-convert.uppercase",
				"title": "Convert to Uppercase"
			},
			{
				"command": "vscode-convert.lowercase",
				"title": "Convert to Lowercase"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js",
		"changelog": "git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md'",
		"tag": "git push origin && git push origin --tags",
		"release:major": "changelog -M && yarn run changelog && npm version major && yarn run tag",
		"release:minor": "changelog -m && yarn run changelog && npm version minor && yarn run tag",
		"release:patch": "changelog -p && yarn run changelog && npm version patch && yarn run tag",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"@types/vscode": "^1.48.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"eslint": "^7.6.0",
		"generate-changelog": "^1.8.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0"
	}
}
